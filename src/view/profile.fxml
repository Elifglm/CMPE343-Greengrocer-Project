<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.ProfileController"
            prefWidth="450" prefHeight="350">

    <center>
        <VBox spacing="15" alignment="CENTER">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <Label text="Edit Profile" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

            <!-- Username (read-only) -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="Username:" prefWidth="100" style="-fx-font-weight: bold;"/>
                <Label fx:id="usernameDisplayLabel" text="" prefWidth="200" 
                       style="-fx-font-size: 14; -fx-text-fill: #333;"/>
            </HBox>

            <!-- Address -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="Address:" prefWidth="100"/>
                <TextField fx:id="addressField" promptText="Your address (optional)" prefWidth="250"/>
            </HBox>

            <!-- Phone -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="Phone:" prefWidth="100"/>
                <TextField fx:id="phoneField" promptText="Phone number (optional)" prefWidth="250"/>
            </HBox>

            <!-- Info label -->
            <Label fx:id="infoLabel" text="" style="-fx-text-fill: red;" wrapText="true" maxWidth="350"/>

            <!-- Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <padding>
                    <Insets top="15"/>
                </padding>
                <Button text="Save Changes" onAction="#handleSave" prefWidth="130" 
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button text="Cancel" onAction="#handleCancel" prefWidth="130"/>
            </HBox>

            <!-- Hint -->
            <Label text="Phone format: 7-15 digits, optional + at start"
                   style="-fx-font-size: 11; -fx-text-fill: gray;"/>
        </VBox>
    </center>

</BorderPane>
