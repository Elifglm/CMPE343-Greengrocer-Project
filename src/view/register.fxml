<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.RegisterController"
            prefWidth="520" prefHeight="420">

    <center>
        <VBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Customer Registration" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

            <TextField fx:id="usernameField" promptText="Username" maxWidth="300"/>
            <PasswordField fx:id="passwordField" promptText="Password" maxWidth="300"/>
            <PasswordField fx:id="password2Field" promptText="Repeat Password" maxWidth="300"/>

            <TextField fx:id="addressField" promptText="Address (optional)" maxWidth="300"/>
            <TextField fx:id="phoneField" promptText="Phone (optional)" maxWidth="300"/>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Create Account" onAction="#handleRegister" prefWidth="150"/>
                <Button text="Back to Login" onAction="#handleBack" prefWidth="150"/>
            </HBox>

            <Label fx:id="infoLabel" text="" style="-fx-text-fill: red;"/>
        </VBox>
    </center>

</BorderPane>
